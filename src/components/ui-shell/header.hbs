<header class="{{@root.prefix}}--header" role="banner" aria-label="IBM Platform Name" data-header>
  <a class="{{@root.prefix}}--skip-to-content" href="#main-content" tabindex="0">Skip to main content</a>
  {{#if nav.state.expanded}}
  <button class="{{@root.prefix}}--header__menu-trigger {{@root.prefix}}--header__action
  {{@root.prefix}}--header__action--active"
    aria-label="Close menu" title="Close menu">
    <svg aria-hidden="true" width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
      <path d="M17.414 16L24 9.414 22.586 8 16 14.586 9.414 8 8 9.414 14.586 16 8 22.586 9.414 24 16 17.414 22.586 24 24 22.586 17.414 16z" /></svg>
    {{else}}
    <button class="{{@root.prefix}}--header__menu-trigger {{@root.prefix}}--header__action" aria-label="Open menu"
      title="Open menu">
      <svg aria-hidden="true" width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
        <path d="M4 6h24v2H4zm0 18h24v2H4zm0-9h24v2H4z" /></svg>
      {{/if}}
    </button>
    <a class="{{@root.prefix}}--header__name" href="#" title="{{header.name}}">
      <span class="bx--header__name--prefix">
        {{header.company}}
        &nbsp;
      </span>
      {{header.platform}}
    </a>
    {{> header-nav }}
    <div class="{{@root.prefix}}--header__global">
      {{#each header.actions}}
      <button class="{{@root.prefix}}--header__action" aria-label="{{this.title}} " title="{{this.title}}">
        <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" aria-hidden="true">
          <path d="M8.24 25.14L7 26.67a14 14 0 0 0 4.18 2.44l.68-1.88a12 12 0 0 1-3.62-2.09zm-4.05-7.07l-2 .35A13.89 13.89 0 0 0 3.86 23l1.73-1a11.9 11.9 0 0 1-1.4-3.93zm7.63-13.31l-.68-1.88A14 14 0 0 0 7 5.33l1.24 1.53a12 12 0 0 1 3.58-2.1zM5.59 10L3.86 9a13.89 13.89 0 0 0-1.64 4.54l2 .35A11.9 11.9 0 0 1 5.59 10zM16 2v2a12 12 0 0 1 0 24v2a14 14 0 0 0 0-28z" />
        </svg>
      </button>
      {{/each}}
    </div>
</header>
