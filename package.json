{
  "name": "@console/bluemix-components-react",
  "version": "2.0.0",
  "description": "A React wrapper for bluemix-components",
  "main": "dist/index.js",
  "scripts": {
    "check": "npm run lint && npm run test",
    "coverage": "./node_modules/.bin/jest '/(components|lib|internal)/' --coverage && node scripts/create-badge.js",
    "storybook": "./node_modules/.bin/start-storybook -p 9001",
    "test": "./node_modules/.bin/jest '/(components|lib|internal)/'",
    "test-watch": "./node_modules/.bin/jest '/(components|lib|internal)/' --watch",
    "test-a11y": "./node_modules/.bin/jest '/a11y/'",
    "lint": "./node_modules/.bin/eslint --ignore-pattern dist .",
    "build-storybook": "./node_modules/.bin/build-storybook -s .storybook -o .gh-pages/storybook",
    "gh-pages": "node scripts/gh-pages.js",
    "build-es5": "./node_modules/.bin/babel . -d dist --ignore a11y,__tests__,node_modules,scripts,deploy.js",
    "precommit": "lint-staged",
    "commitmsg": "./node_modules/.bin/validate-commit-msg",
    "commit": "git cz"
  },
  "keywords": [
    "react",
    "bluemix",
    "bluemix-components"
  ],
  "files": [
    "dist/**/*"
  ],
  "contributors": [
    {
      "name": "Brian Han",
      "email": "bthan@us.ibm.com"
    },
    {
      "name": "Aziz Punjani",
      "email": "punjani@us.ibm.com"
    },
    {
      "name": "Mari Johannessen",
      "email": "mjohannessen@us.ibm.com"
    },
    {
      "name": "TJ Egan",
      "email": "twegan@us.ibm.com"
    },
    {
      "name": "Ian Fleming",
      "email": "ianfleming@us.ibm.com"
    },
    {
      "name": "Chris Dhanaraj",
      "email": "chrisdhanaraj@us.ibm.com"
    }
  ],
  "license": "MIT",
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "rules": {
      "react/jsx-uses-vars": 1,
      "react/jsx-uses-react": 1,
      "jsx-a11y/onclick-has-role": 1,
      "jsx-a11y/click-events-have-key-events": 1,
      "jsx-a11y/href-no-hash": 1,
      "jsx-a11y/onclick-has-focus": 1
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jest": true,
      "jasmine": true
    }
  },
  "dependencies": {
    "carbon-icons": "^5.1.2",
    "classnames": "2.2.5",
    "lodash.debounce": "^4.0.8",
    "react": "^15.3.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-dom": "^15.3.2",
    "warning": "3.0.0"
  },
  "devDependencies": {
    "@ibma/aat": "^1.0.29",
    "@kadira/react-storybook-addon-info": "3.2.1",
    "@kadira/react-storybook-decorator-centered": "^1.0.0",
    "@kadira/storybook": "2.20.0",
    "autoprefixer": "^6.3.7",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-jest": "^18.0.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.16.0",
    "carbon-components": "^7.3.1",
    "commitizen": "^2.9.5",
    "css-loader": "0.23.1",
    "cz-conventional-changelog-components": "^1.0.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^2.0.0",
    "eslint-plugin-react": "^6.0.0",
    "gh-pages": "0.11.0",
    "husky": "^0.13.1",
    "jest": "^18.1.0",
    "lcov2badge": "^0.1.0",
    "lint-staged": "^3.4.0",
    "node-sass": "3.8.0",
    "postcss-loader": "^0.9.1",
    "prettier": "^1.2.2",
    "react-addons-test-utils": "^15.3.1",
    "sass-loader": "4.0.0",
    "shelljs": "^0.7.5",
    "style-loader": "0.13.1",
    "validate-commit-msg": "^2.10.1"
  },
  "jest": {
    "coverageDirectory": "./.gh-pages/coverage",
    "moduleNameMapper": {
      "^.+\\.(scss)$": "<rootDir>/lib/styleMock.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-components"
    }
  }
}