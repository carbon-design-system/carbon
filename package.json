{
  "name": "elements",
  "version": "0.0.0",
  "private": true,
  "repository": "git@github.com:IBM/carbon-elements.git",
  "license": "Apache-2.0",
  "engines": {
    "node": "8.x"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "build": "lerna run build --stream --prefix --npm-client yarn",
    "ci-check": "toolkit format:diff && bundler check --ignore '**/@(node_modules|examples)/**' 'packages/**/*.scss' && toolkit test --ci --reporters=default --reporters=jest-junit",
    "clean": "lerna clean --yes && rimraf node_modules",
    "examples": "yarn build && node tasks/examples.js",
    "format": "toolkit format",
    "format:diff": "toolkit format:diff",
    "lint": "toolkit lint .",
    "lint:styles": "toolkit stylelint \"**/*.{css,scss}\"",
    "test": "toolkit test"
  },
  "devDependencies": {
    "@carbon/cli-plugin-editorconfig": "^0.0.21",
    "@carbon/cli-plugin-eslint": "^0.0.21",
    "@carbon/cli-plugin-github-files": "^0.0.21",
    "@carbon/cli-plugin-jest": "^0.0.21",
    "@carbon/cli-plugin-prettier": "^0.0.21",
    "@carbon/cli-plugin-stylelint": "^0.0.21",
    "@carbon/toolkit": "^0.0.21",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-eslint": "^9.0.0-beta.3",
    "cross-spawn": "^6.0.5",
    "eslint-plugin-import": "^2.14.0",
    "fs-extra": "^7.0.0",
    "gh-pages": "^2.0.0",
    "glob": "^7.1.3",
    "husky": "^1.1.2",
    "jest-junit": "^5.1.0",
    "lerna": "^2.11.0",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.9.3",
    "rimraf": "^2.6.2"
  },
  "toolkit": {
    "plugins": [
      "@carbon/cli-plugin-prettier",
      "@carbon/cli-plugin-eslint",
      "@carbon/cli-plugin-stylelint",
      [
        "@carbon/cli-plugin-jest",
        {
          "reporters": [
            "default",
            "jest-junit"
          ]
        }
      ],
      "@carbon/cli-plugin-github-files",
      "@carbon/cli-plugin-editorconfig"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "git add"
    ],
    "*.{scss,css}": [
      "yarn format",
      "git add"
    ],
    "*.md": [
      "yarn format",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-toolkit"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-toolkit"
    ]
  }
}
